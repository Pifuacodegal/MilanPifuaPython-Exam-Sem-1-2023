#(i)
#Test the function with a radius of 5
def calculate_area(radius):
    pi = 3.14
    area = pi * radius**2
    return area
radius_number = 5
Output = calculate_area(radius_number)
print(f"The area  of the circle  {radius_number} is: {Output}")



#(ii)
#Test the function with n=4
def SumOfNaturalNumbers(n):
    if n == 0:
        return 0
    else:
        return n + SumOfNaturalNumbers(n - 1)
n_value = 4
Answer = SumOfNaturalNumbers(n_value)
print(f"The sum of natural numbers up to {n_value} is: {Answer}")


#(iii)
#remove the element at index 2 and insert the value 10 at the end.
#numbers = [1,3,5,7,9]
numbers = [1, 3, 5, 7, 9]

# remove element at index 2
del numbers[2]

# insert 10 at the end
numbers.append(10)

print(numbers)

#(iv)
#create a new list that contains only the even numbers from the original list.
even_numbers =[2, 4, 6, 8, 10]
numbers = [1, 3, 5, 7, 9, 10]
numbers = [1, 3, 5, 7, 9, 10]

even_numbers = [m for m in numbers if m % 2 == 0]

print(even_numbers)

#(v)
#update the value of 'age' to 25 and add a new key-value pair ('city', 'New York')
student_info ={
        'name' : 'Alice',
        'age'   : '20',
        'grade'  : 'A'
}
 #update the value of age to 25
student_info['age'] =25   


#add a new key-value pair ('city', 'New York')
student_info['city'] = 'New York'

print(student_info)

#(vi)
#create a new dictionary with only key-value pairs where the value is greater than 5
original_dict ={'a':3, 'b':8,'c':2, 'd':7}
    
changed_dict = { key: value for key, value in original_dict.items() if value > 5}

print(changed_dict)




    


















